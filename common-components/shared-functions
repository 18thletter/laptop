fancy_echo() {
  printf "\n%b\n" "$1"
}

append_to_zshrc() {
  local text="$1"
  local skip_new_line="$2"

  if [[ ! -r "$HOME/.zsh/configs/laptop" ]]; then
    touch "$HOME/.zsh/configs/laptop"
  fi

  local zshrc="$HOME/.zsh/configs/laptop"

  if ! grep -Fqs "$text" "$zshrc"; then
    if (( skip_new_line )); then
      printf "%s\n" "$text" >> "$zshrc"
    else
      printf "\n%s\n" "$text" >> "$zshrc"
    fi
  fi
}
